<div class="jumbotron">
  <div class="row">
    <div class="col-sm">
      <img src= <%=@week.residence.imagen %> , class="rounded" />
    </div>
    <div class="col-sm">
      <table class="table">
        <tr>
          <td> <h2><%= @week.residence.complejo %> <h2></td>
        </tr>
         <tr>
          <td> <h4>Estado:<h4></td>
          <td> <h5 style="color: red">OCUPADA<h5></td>
        </tr>
        <tr>
        <tr>
          <td> <h4>Ubicación:<h4></td>
          <td> <h5><%= @week.residence.ubicacion  %><h5></td>
        </tr>
        <tr>
          <td> <h4>Precio:(ARS)<h4></td>
          <td><h5>$<%= @week.residence.precio %><h5></td>
        </tr>
        <tr>
          <td> <h4>Descripcion:<h4></td>
          <td> <h5><%= @week.residence.descripcion  %><h5></td>
        </tr>
        <tr>
          <td> <h4>Capacidad<h4></td>
          <td> <h5><%= @week.residence.capacidad  %><h5> </td>
        </tr>
        <tr>
          <td> <h4>Estrellas:<h4></td>
          <td> <h5><%= @week.residence.estrellas  %><h5></td>
        </tr>
        <tr>
          <td> <h4>Semana:<h4></td>
          <td> <h5><%= @week.fecha  %><h5> </td>
        <tr>
          
        <tr>
          <td><%= link_to 'Eliminar', @week, method: :delete, class: 'btn btn-danger btn-lg', data: { confirm: '¿Está seguro que desea eliminar la reserva?' }  %></td>
          <td><%= link_to 'Volver', residences_path, class: 'btn btn-dark btn-me' %></td>
        </tr>

      </table>
    </div>

  </div>
</div>