
<div class="jumbotron">
  <div class="row">
    <div class="col-sm">
      <img src= <%=@residence.imagen %> , class="rounded" />
    </div>
    <div class="col-sm">
      <table class="table">
        <tr>
          <td> <h2><%= @residence.complejo %> </h2></td>
        </tr>
        <tr>
          <td> <h4>Ubicación: <h4> </td>
          <td><h5><%= @residence.ubicacion %><h5></td>
        </tr>
        <tr>
          <td> <h4>Precio:(ARS)<h4></td>
          <td> <h5><%= @residence.precio %><h5></td>
        </tr>
        <tr>
          <td> <h4>Descripción:<h4></td>
          <td> <h5><%= @residence.descripcion %><h5></td>
        </tr>
        <tr>
          <td> <h4>Capacidad:<h4></td>
          <td> <h5><%= @residence.capacidad %><h5> </td>
        </tr>
        <tr>
          <td> <h4>Estrellas:<h4></td>
          <td> <h5><%= @residence.estrellas %><h5></td>
        </tr>
        <tr>
          <td> <h4>Semana:<h4></td>
          <td> <h5><%= @residence.semana %><h5> </td>
        </tr>
        <tr>
          <td><%= link_to 'Volver', residences_path, class: 'btn btn-dark btn-lg' %></td>
          <td><%= link_to 'Iniciar Subasta', new_auction_path(@residence), class: 'btn btn-primary btn-lg' %></td>
        </tr>
        <tr>
          <td><%= link_to 'Editar', edit_residence_path(@residence), class: 'btn btn-dark btn-mm'%></td>
          <td><%= link_to 'Eliminar', @residence, method: :delete, class: 'btn btn-danger btn-mm', data: { confirm: '¿Está seguro que desea eliminar la residencia?' }  %></td>
        </tr>

      </table>
    </div>

  </div>
</div>
