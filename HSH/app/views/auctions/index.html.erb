<h2>Subastas</h2>

<table class="table">

	<thead>
		<tr>
			<th width ="50%"> Complejo: </th>
			<th colspan="1"></th>
		</tr>
	</thead>

	<tbody>
		<% @auction.each do |auc| %>
		<tr>
			<td><%= Residence.find(auc.residencia_id).complejo %></td>
			<td>$<%= auc.precioBase %></td>
			<td><%= link_to 'Ver', auction_path(auc), class: 'btn btn-info btn-sm'%></td>

			<td><%= link_to 'Eliminar', auc, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: '¿Está seguro que desea eliminar la subasta?' }  %></td>


		</tr>
		<% end%>
	</tbody>

</table>

<%= link_to 'Volver',residences_path, class: 'btn btn-primary' %>
