<h2>Residencias</h2>

<table class="table">
	
	<thead>
		<tr>
			<th width ="50%"> Complejo: </th>
			<th colspan="1"></th>
		</tr>
	</thead>

	<tbody>
		<% @residence.each do |resi| %>
		<tr>
			<td><%= resi.title %></td>
			<td><%= link_to 'Editar'%></td>
			<td><%= link_to 'Eliminar', resi, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: '¿Está seguro que desea eliminar la residencia?' }  %></td>

		</tr>
		<% end%>
	</tbody>

</table>

<%= link_to 'Nueva residencia', new_residence_path, class: 'btn btn-primary' %>