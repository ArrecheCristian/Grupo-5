<% if user_signed_in? %>

<nav class="navbar navbar-dark bg-dark">
	<%= form_tag '/home_users', :method => :get do %>
		<%= label_tag :com, 'Complejo', style:'color :white'%>
		<%= text_field_tag :com,params[:com],
			placeholder: "Busca tu lugar" %>
		<%= label_tag :loc, 'Localidad', style:'color :white'%>
		<%= text_field_tag :loc, params[:loc],
			placeholder: "Busca tu lugar" %>
		<%= label_tag :pre, 'Precio', style:'color :white'%>
		<%= number_field_tag :pre, params[:pre],
			placeholder: "Busca tu lugar" %>
		<%= submit_tag 'Buscar' %>
	<% end %>
	<%= link_to t('devise.sessions.sign_out'), destroy_user_session_path, :method => :delete, class: 'btn btn-secondary btn-sm'%>
</nav>



<span><h4> Filtrando por:</h4></span>
<table>
	<tr>
		<td><%= params[:com] && params[:com] != "" ? "Complejo: " + params[:com] : "" %></td>
	</tr>

	<tr>
		<td><%= params[:loc] && params[:loc] != "" ? "Localidad: " + params[:loc] : "" %></td>
	</tr>

	<tr>
		<td><%= @precio != 0.0 ? "Precio: " + "#{@precio}" : "" %></td>
	</tr>
</table>


<div class="row mt-5 justify-content-center">

	<% @residences.each do |r| %>

	<div class="card card-custom mx-2 mb-3" style="width: 50rem;">
		<img class="card-img-top" src= <%=r.imagen%> alt="Card image cap">
			<div class="card-body">
				<h3 class="card-title"> <%= r.complejo %> </h3>
				<p class="card-text">
					<h5> <%= r.ubicacion %> </h5><br>
					Capacidad: <%= r.capacidad %> <br>
					Precio: $<%= r.auction.precioBase %> <br>
				</p>

				<a><%= link_to 'Ver más', home_user_path(r), class: 'btn btn-info btn-sm'%></a>
			</div>
	</div>
<% end %>
</div>
<h2> Residencias para reserva directa: </h2>
<div class="row mt-5 justify-content-center">

	<% @residence.each do |resi| %>

	<div class="card card-custom mx-2 mb-3" style="width: 50rem;">
		<img class="card-img-top" src= <%=resi.imagen%> alt="Card image cap">
			<div class="card-body">
				<h3 class="card-title"> <%= resi.complejo %> </h3>
				<p class="card-text">
					<h5> <%= resi.ubicacion %> </h5><br>
					Capacidad: <%= resi.capacidad %> <br>
					Precio: $<%= resi.precio %> <br>
				</p>

				<a><%= link_to 'Ver más', seeker_path(resi), class: 'btn btn-info btn-sm'%></a>
			</div>
	</div>
<% end %>
</div>


<% else %>
		<center><h2>¡ERROR! Antes debe inciar sesión en nuestro sistema</h2></center>
		<center><h4>Para iniciar sesión o registrarse:</h4></center>

		<center> <%=link_to 'Click aquí', root_path, class: 'btn btn-primary btn-lg' %> </center>

<% end %>
