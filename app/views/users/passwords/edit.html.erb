<h2>Recupera tu contraseña</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: "Nueva contraseña",
                required: true,
                autofocus: true,
                hint: ("Mínimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, label: "Confirma tu nueva contraseña", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Cambiar mi contraseña", class: 'btn btn-dark btn-lg' %>
  </div>
<% end %>

