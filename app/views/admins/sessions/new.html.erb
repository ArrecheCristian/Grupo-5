
<style>
    { margin: 0; padding: 0; }

    html { 
        background: url('https://ak9.picdn.net/shutterstock/videos/22089199/thumb/1.jpg') no-repeat center center fixed; 
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
</style>

<div class="float-left">
     <div class="card card-custom mx-5 mb-3" style="width:50rem;" >
        <div class="card-body">
              <p class="card-text">
                <h2>INICIAR SESIÓN</h2>
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="form-inputs">
                        <%= f.input :email,
                                    required: false,
                                    autofocus: true,
                                    input_html: { autocomplete: "email" } %>
                        <%= f.input :password,
                                    required: false,
                                    input_html: { autocomplete: "current-password" } %>
                      </div>

                      <div class="form-actions">
                        <%= f.button :submit, "Ingresar",  class: 'btn btn-dark btn-lg' %>
                      </div>
                    <% end %>

                   <p class="card-text">   
                   <br><br>
                   <font size=3 face="arial"> 
                     Si es miembro nuevo de nuestra empresa, 
                     regístrese! 
                    </font> 
                    <br>

                <td><%= link_to 'Nuevo administrador', new_code_path, class: 'btn btn-dark btn-lg'%></td>
              </p> 
            </p>
        </div>
    </div>
</div>
    






