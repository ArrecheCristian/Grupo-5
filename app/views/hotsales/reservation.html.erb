<% if admin_signed_in? || user_signed_in?%>

<div class="jumbotron">
  <div class="row">
    <div class="col-sm">
      <img src= <%=@hotsale.residence.imagen %> , class="rounded" />
    </div>
    <div class="col-sm">
      <table class="table">
        <tr>
          <td> <h2><%= @hotsale.residence.complejo %> <h2></td>
        </tr>
        <tr>
          <td> <h4>Reservado por:<h4></td>
          <td> <h3 style="color: green"><%= @hotsale.email %><h3></td>
        </tr>
        <tr>
        <tr>
          <td> <h4>Ubicación:<h4></td>
          <td> <h5><%= @hotsale.residence.ubicacion  %><h5></td>
        </tr>
        <tr>
          <td> <h4>Precio:(ARS)<h4></td>
          <td><h5>$<%= @hotsale.monto %><h5></td>
        </tr>
        <tr>
          <td> <h4>Descripcion:<h4></td>
          <td> <h5><%= @hotsale.residence.descripcion  %><h5></td>
        </tr>
        <tr>
          <td> <h4>Capacidad<h4></td>
          <td> <h5><%= @hotsale.residence.capacidad  %><h5> </td>
        </tr>
        <tr>
          <td> <h4>Estrellas:<h4></td>
          <td> <h5><%= @hotsale.residence.estrellas  %><h5></td>
        </tr>
        <tr>
          <td> <h4>Semana:<h4></td>
          <td> <h5><%= @hotsale.fecha  %><h5> </td>
        <tr>
          
    <tr>
          <td><%= link_to 'Petición de Cancelación', new_cancellation_path(:complejo => @hotsale.residence.complejo,:fecha => @hotsale.fecha, :usuario => @hotsale.email, :descripcion =>@hotsale.residence.descripcion ), class: 'btn btn-danger btn-me' %></td>
          <td><%= link_to 'Volver', home_users_path, class: 'btn btn-dark btn-me' %></td>
        </tr>

      </table>
    </div>

  </div>
</div>
</div>

<% else %>
  <%= render 'layouts/error' %>
<% end %>