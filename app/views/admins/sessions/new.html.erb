
<style>
    { margin: 0; padding: 0; }

    html { 
        background: url('https://ak9.picdn.net/shutterstock/videos/22089199/thumb/1.jpg') no-repeat center center fixed; 
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
</style>

<div class="float-left">
     <div class="card card-custom mx-5 mb-3" style="width:50rem;" >
        <div class="card-body">
              <p class="card-text">
                <h2>Iniciar Sesión</h2>
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="form-inputs">
                        <%= f.input :email,
                                    required: false,
                                    autofocus: true,
                                    input_html: { autocomplete: "email" } %>
                        <%= f.input :password,
                                    required: false,
                                    input_html: { autocomplete: "current-password" } %>
                      </div>

                      <div class="form-actions">
                        <%= f.button :submit, "Iniciar sesión",  class: 'btn btn-dark btn-lg' %>
                      </div>
                    <% end %>
            </p>
        </div>
    </div>
</div>
    






